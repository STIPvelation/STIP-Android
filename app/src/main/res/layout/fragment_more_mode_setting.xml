<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F7"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="6dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_menu_preferences"
                android:tint="#30C6E8" />

            <TextView
                android:id="@+id/tv_general_section_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/general_section_title"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_screen_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp">

                <TextView
                    android:id="@+id/tv_screen_on_title"
                    style="@style/DefaultTextStyle_16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/screen_on_title"
                    app:layout_constraintBottom_toTopOf="@+id/tv_screen_on_desc"
                    app:layout_constraintEnd_toStartOf="@+id/switch_screen_on_container"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tv_screen_on_desc"
                    style="@style/DefaultTextStyle_gery_12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="12dp"
                    android:text="@string/screen_on_desc"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/switch_screen_on_container"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_screen_on_title" />

                <FrameLayout
                    android:id="@+id/switch_screen_on_container"
                    android:layout_width="51dp"
                    android:layout_height="31dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_screen_on_desc"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_screen_on_title">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_screen_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:checked="false"
                        android:scaleX="0.9"
                        android:scaleY="0.9"
                        app:thumbTint="@color/switch_thumb_color"
                        app:trackTint="@color/switch_track_color" />
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_menu_recent_history"
                android:tint="#30C6E8" />

            <TextView
                android:id="@+id/tv_exchange_section_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/exchange_section_title"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_ip_refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp">

                <TextView
                    android:id="@+id/tv_ip_refresh_title"
                    style="@style/DefaultTextStyle_16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/ip_refresh_title"
                    app:layout_constraintBottom_toTopOf="@+id/tv_ip_refresh_desc"
                    app:layout_constraintEnd_toStartOf="@+id/btn_refresh_ip"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tv_ip_refresh_desc"
                    style="@style/DefaultTextStyle_gery_12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="12dp"
                    android:text="@string/ip_refresh_desc"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btn_refresh_ip"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_ip_refresh_title" />

                <TextView
                    android:id="@+id/btn_refresh_ip"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/blue_button_bg"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/refresh"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintBottom_toBottomOf="@id/tv_ip_refresh_desc"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_ip_refresh_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_menu_view"
                android:tint="#30C6E8" />

            <TextView
                android:id="@+id/tv_display_mode_section_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/display_mode_section_title"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/item_display_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/tv_display_normal_title"
                        style="@style/DefaultTextStyle_16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="@string/display_mode_normal_title"
                        app:layout_constraintBottom_toTopOf="@+id/tv_display_normal_desc"
                        app:layout_constraintEnd_toStartOf="@+id/switch_display_normal_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/tv_display_normal_desc"
                        style="@style/DefaultTextStyle_gery_12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="12dp"
                        android:text="@string/display_mode_normal_desc"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/switch_display_normal_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_display_normal_title" />

                    <FrameLayout
                        android:id="@+id/switch_display_normal_container"
                        android:layout_width="51dp"
                        android:layout_height="31dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toBottomOf="@id/tv_display_normal_desc"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_display_normal_title">

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_display_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:checked="true"
                            android:enabled="false"
                            android:scaleX="0.9"
                            android:scaleY="0.9"
                            app:thumbTint="#FFFFFF"
                            app:trackTint="#30C6E8" />
                    </FrameLayout>

                    <View
                        android:id="@+id/divider_display_normal"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#E0E0E0"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/item_display_dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/tv_display_dark_title"
                        style="@style/DefaultTextStyle_16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="@string/display_mode_dark_title"
                        app:layout_constraintBottom_toTopOf="@+id/tv_display_dark_desc"
                        app:layout_constraintEnd_toStartOf="@+id/switch_display_dark_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/tv_display_dark_desc"
                        style="@style/DefaultTextStyle_gery_12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="12dp"
                        android:text="@string/display_mode_dark_desc"
                        app:layout_constraintBottom_toTopOf="@id/divider_display_dark"
                        app:layout_constraintEnd_toStartOf="@+id/switch_display_dark_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_display_dark_title" />

                    <FrameLayout
                        android:id="@+id/switch_display_dark_container"
                        android:layout_width="51dp"
                        android:layout_height="31dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toBottomOf="@id/tv_display_dark_desc"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_display_dark_title">

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_display_dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:checked="false"
                            android:scaleX="0.9"
                            android:scaleY="0.9"
                            app:thumbTint="#FFFFFF"
                            app:trackTint="#CCCCCC" />
                    </FrameLayout>

                    <View
                        android:id="@+id/divider_display_dark"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#E0E0E0"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/item_display_design"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/tv_display_design_title"
                        style="@style/DefaultTextStyle_16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="@string/display_mode_design_title"
                        app:layout_constraintBottom_toTopOf="@+id/tv_display_design_desc"
                        app:layout_constraintEnd_toStartOf="@+id/switch_display_design_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/tv_display_design_desc"
                        style="@style/DefaultTextStyle_gery_12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="12dp"
                        android:text="@string/display_mode_design_desc"
                        app:layout_constraintBottom_toTopOf="@id/divider_display_design"
                        app:layout_constraintEnd_toStartOf="@+id/switch_display_design_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_display_design_title" />

                    <FrameLayout
                        android:id="@+id/switch_display_design_container"
                        android:layout_width="51dp"
                        android:layout_height="31dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toBottomOf="@id/tv_display_design_desc"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_display_design_title">

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_display_design"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:checked="false"
                            android:scaleX="0.9"
                            android:scaleY="0.9"
                            app:thumbTint="#FFFFFF"
                            app:trackTint="#CCCCCC" />
                    </FrameLayout>

                    <View
                        android:id="@+id/divider_display_design"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#E0E0E0"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/item_display_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/tv_display_user_title"
                        style="@style/DefaultTextStyle_16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="@string/display_mode_user_title"
                        app:layout_constraintBottom_toTopOf="@+id/tv_display_user_desc"
                        app:layout_constraintEnd_toStartOf="@+id/switch_display_user_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/tv_display_user_desc"
                        style="@style/DefaultTextStyle_gery_12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="12dp"
                        android:text="@string/display_mode_user_desc"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/switch_display_user_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_display_user_title" />

                    <FrameLayout
                        android:id="@+id/switch_display_user_container"
                        android:layout_width="51dp"
                        android:layout_height="31dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toBottomOf="@id/tv_display_user_desc"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_display_user_title">

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_display_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:checked="false"
                            android:scaleX="0.9"
                            android:scaleY="0.9"
                            app:thumbTint="#FFFFFF"
                            app:trackTint="#CCCCCC" />
                    </FrameLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </RadioGroup>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_menu_sort_alphabetically"
                android:tint="#30C6E8" />

            <TextView
                android:id="@+id/language_selection_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/language_select"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/item_language_korean"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_title_language_korean"
                        style="@style/DefaultTextStyle_16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="@string/language_korean"
                        app:layout_constraintBottom_toTopOf="@+id/tv_desc_language_korean"
                        app:layout_constraintEnd_toStartOf="@+id/switch_language_korean_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/tv_desc_language_korean"
                        style="@style/DefaultTextStyle_gery_12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="12dp"
                        android:text="@string/language_korean_desc"
                        app:layout_constraintBottom_toTopOf="@id/divider_language_korean"
                        app:layout_constraintEnd_toStartOf="@+id/switch_language_korean_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_language_korean" />

                    <FrameLayout
                        android:id="@+id/switch_language_korean_container"
                        android:layout_width="51dp"
                        android:layout_height="31dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toBottomOf="@id/tv_desc_language_korean"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_title_language_korean">

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_language_korean"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:checked="true"
                            android:scaleX="0.9"
                            android:scaleY="0.9"
                            app:thumbTint="#FFFFFF"
                            app:trackTint="#30C6E8" />
                    </FrameLayout>

                    <View
                        android:id="@+id/divider_language_korean"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#E0E0E0"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/item_language_english"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/tv_title_language_english"
                        style="@style/DefaultTextStyle_16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="@string/language_english"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toTopOf="@+id/tv_desc_language_english"
                        app:layout_constraintEnd_toStartOf="@+id/switch_language_english_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/tv_desc_language_english"
                        style="@style/DefaultTextStyle_gery_12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="12dp"
                        android:text="@string/language_english_desc"
                        android:textSize="13sp"
                        android:textColor="#6e6e6e"
                        app:layout_constraintBottom_toTopOf="@id/divider_language_english"
                        app:layout_constraintEnd_toStartOf="@+id/switch_language_english_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_language_english" />

                    <FrameLayout
                        android:id="@+id/switch_language_english_container"
