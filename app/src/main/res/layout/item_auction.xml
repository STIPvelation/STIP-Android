<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 이미지 및 IP 유형 태그 (iOS와 동일하게 16:9 비율) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/imageAuction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@android:drawable/ic_menu_gallery" />
            
            <!-- 그라데이션 오버레이 (iOS와 같이 중앙에서 아래로) -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_overlay" />

            <!-- IP 유형 태그 (iOS와 동일한 위치) -->
            <TextView
                android:id="@+id/badgeIpType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                android:background="@drawable/tag_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_medium"
                tools:text="저작권" />
        </FrameLayout>

        <!-- 정보 섹션 (iOS와 동일한 패딩) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#FFFFFF">

            <!-- 제목 (iOS와 동일한 폰트 사이즈) -->
            <TextView
                android:id="@+id/textAuctionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="인기 웹툰 'STIP 일상' IP" />

            <!-- 등록번호 (iOS와 동일한 아이콘/텍스트) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    android:tint="#888888" />

                <TextView
                    android:id="@+id/textRegistrationNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    tools:text="경매 IP: C-2023-056789" />
            </LinearLayout>

            <!-- 현재 가격 (iOS와 동일한 레이아웃) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재 가격"
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:fontFamily="@font/pretendard_regular" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textAuctionPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="₩ 12,500,000" />
            </LinearLayout>

            <!-- 구분선 (iOS와 동일) -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginTop="8dp" />

            <!-- 남은 시간 & 입찰자 수 (iOS와 같은 아이콘) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- 남은 시간 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        android:tint="#888888" />

                    <TextView
                        android:id="@+id/textTimeRemaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        tools:text="1일 남음" />
                </LinearLayout>

                <!-- 참여자 수 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:tint="#888888" />

                    <TextView
                        android:id="@+id/textBidCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        tools:text="25명 참여" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
