<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 검색바 (iOS 스타일) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/searchBarCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardBackgroundColor="#F4F7FC"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="4dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="4dp"
                        android:src="@android:drawable/ic_menu_search"
                        android:tint="#888888" />

                    <EditText
                        android:id="@+id/searchEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="검색어를 입력하세요"
                        android:padding="8dp"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"/>

                    <ImageView
                        android:id="@+id/clearSearchButton"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="4dp"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:tint="#888888"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 가테고리 (iOS 스타일) -->
            <HorizontalScrollView
                android:id="@+id/categoriesScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@id/searchBarCard">

                <LinearLayout
                    android:id="@+id/categoriesContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:gravity="center_vertical">

                    <!-- iOS 디자인처럼 버튼형 카테고리 -->
                    <Button
                        android:id="@+id/btnCategoryAll"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="전체"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/button_rounded_primary"
                        android:layout_marginEnd="12dp"
                        android:paddingHorizontal="16dp"
                        style="@style/Widget.MaterialComponents.Button" />

                    <Button
                        android:id="@+id/btnCategoryPatent"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="특허"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:background="@drawable/button_rounded_secondary"
                        android:layout_marginEnd="12dp"
                        android:paddingHorizontal="16dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton" />

                    <Button
                        android:id="@+id/btnCategoryGame"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="게임"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:background="@drawable/button_rounded_secondary"
                        android:layout_marginEnd="12dp"
                        android:paddingHorizontal="16dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton" />

                    <Button
                        android:id="@+id/btnCategoryCharacter"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="캐릭터"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:background="@drawable/button_rounded_secondary"
                        android:layout_marginEnd="12dp"
                        android:paddingHorizontal="16dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton" />

                    <Button
                        android:id="@+id/btnCategoryFranchise"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="프랜차이즈"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:background="@drawable/button_rounded_secondary"
                        android:layout_marginEnd="12dp"
                        android:paddingHorizontal="16dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton" />

                    <Button
                        android:id="@+id/btnCategoryMusic"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="음악"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:background="@drawable/button_rounded_secondary"
                        android:layout_marginEnd="12dp"
                        android:paddingHorizontal="16dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- 필터 및 정렬 옵션 (iOS 스타일) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/filterSortContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/categoriesScrollView">
                
                <LinearLayout
                    android:id="@+id/filterButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@android:drawable/ic_menu_sort_by_size"
                        android:tint="#444444" />
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="필터"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:layout_marginStart="4dp" />
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/sortButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    
                    <TextView
                        android:id="@+id/sortOptionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="마감임박"
                        android:textSize="14sp"
                        android:textColor="#444444" />
                        
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@android:drawable/arrow_down_float"
                        android:tint="#444444"
                        android:layout_marginStart="4dp" />
                </LinearLayout>
                
            </androidx.constraintlayout.widget.ConstraintLayout>
            
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                app:layout_constraintTop_toBottomOf="@id/filterSortContainer" />
            
            <!-- TabLayout 삭제 -->

            <!-- 옥션 아이템 리스트 (iOS 스타일) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/auctionRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:padding="16dp"
                android:clipToPadding="false"
                android:background="#F4F7FC"
                android:visibility="visible"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
