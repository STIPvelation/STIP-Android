<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_header_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_black_24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingTop="12dp"
                android:paddingStart="@dimen/common_side_margin_20dp"
                android:paddingEnd="@dimen/common_side_margin_20dp"
                android:paddingBottom="12dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_header_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sign_up_kyc_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_kyc_title"
                    android:textSize="24sp"
                    android:textColor="@color/text_black_14181B_100"
                    android:fontFamily="@font/pretendard_medium_font_family"
                    android:textAlignment="center"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sign_up_kyc_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_kyc_email"
                    android:textSize="16sp"
                    android:textColor="@color/text_black_14181B_100"
                    android:fontFamily="@font/pretendard_medium_font_family"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_kyc_title"
                    app:layout_constraintStart_toStartOf="@id/tv_sign_up_kyc_title"
                    android:layout_marginTop="20dp"
                    />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_sign_up_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_black_14181B_100"
                    android:hint="@string/sign_up_kyc_email_hint"
                    android:textColorHint="@color/text_gray_B0B8C1_100"
                    android:fontFamily="@font/pretendard_regular_font_family"
                    android:maxLines="1"
                    android:inputType="text"
                    android:background="@null"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_kyc_email"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_949698_100"
                    app:layout_constraintStart_toStartOf="@+id/et_sign_up_email"
                    app:layout_constraintEnd_toEndOf="@+id/et_sign_up_email"
                    app:layout_constraintBottom_toBottomOf="@+id/et_sign_up_email"
                    android:layout_marginStart="@dimen/common_side_margin_20dp"
                    android:layout_marginEnd="@dimen/common_side_margin_20dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sign_up_kyc_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_kyc_name"
                    android:textSize="16sp"
                    android:textColor="@color/text_black_14181B_100"
                    android:fontFamily="@font/pretendard_medium_font_family"
                    app:layout_constraintTop_toBottomOf="@+id/et_sign_up_email"
                    app:layout_constraintStart_toStartOf="@id/et_sign_up_email"
                    android:layout_marginTop="20dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sign_up_name_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_black_14181B_100"
                    android:hint="@string/sign_up_kyc_name_hint"
                    android:textColorHint="@color/text_gray_B0B8C1_100"
                    android:fontFamily="@font/pretendard_regular_font_family"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_kyc_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_949698_100"
                    app:layout_constraintStart_toStartOf="@+id/tv_sign_up_name_value"
                    app:layout_constraintEnd_toEndOf="@+id/tv_sign_up_name_value"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_sign_up_name_value"
                    android:layout_marginStart="@dimen/common_side_margin_20dp"
                    android:layout_marginEnd="@dimen/common_side_margin_20dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sign_up_kyc_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_kyc_search_address_title"
                    android:textSize="16sp"
                    android:textColor="@color/text_black_14181B_100"
                    android:fontFamily="@font/pretendard_medium_font_family"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_name_value"
                    app:layout_constraintStart_toStartOf="@id/tv_sign_up_name_value"
                    android:layout_marginTop="17dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sign_up_kyc_address_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_black_14181B_100"
                    android:hint="@string/sign_up_kyc_address_hint"
                    android:textColorHint="@color/text_gray_B0B8C1_100"
                    android:fontFamily="@font/pretendard_regular_font_family"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_kyc_address"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_949698_100"
                    app:layout_constraintStart_toStartOf="@+id/tv_sign_up_kyc_address_value"
                    app:layout_constraintEnd_toEndOf="@+id/tv_sign_up_kyc_address_value"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_sign_up_kyc_address_value"
                    android:layout_marginStart="@dimen/common_side_margin_20dp"
                    android:layout_marginEnd="@dimen/common_side_margin_20dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sign_up_kyc_account_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_kyc_account_open"
                    android:textSize="16sp"
                    android:textColor="@color/text_black_14181B_100"
                    android:fontFamily="@font/pretendard_medium_font_family"
                    app:layout_constraintTop_toBottomOf="@id/tv_sign_up_kyc_address_value"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="17dp"
                    />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/btn_account_open_yes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/common_yes"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:checked="true"
                    android:background="@drawable/selector_yes_no"
                    android:button="@drawable/selector_yes_no"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_kyc_account_open"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btn_account_open_no"
                    android:paddingTop="13.5dp"
                    android:paddingBottom="13.5dp"
                    android:layout_marginStart="@dimen/common_side_margin_20dp"
                    android:layout_marginTop="24dp"
                    />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/btn_account_open_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/common_no"
                    android:textColor="@color/text_gray_B0B8C1_100"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:checked="false"
                    android:background="@drawable/selector_yes_no"
                    android:button="@drawable/selector_yes_no"
                    app:layout_constraintTop_toTopOf="@+id/btn_account_open_yes"
                    app:layout_constraintStart_toEndOf="@id/btn_account_open_yes"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingTop="13.5dp"
                    android:paddingBottom="13.5dp"
                    android:layout_marginEnd="@dimen/common_side_margin_20dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sign_up_sign_up_kyc_purpose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_kyc_purpose"
                    android:textSize="16sp"
                    android:textColor="@color/text_black_14181B_100"
                    android:fontFamily="@font/pretendard_medium_font_family"
                    app:layout_constraintTop_toBottomOf="@+id/btn_account_open_yes"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="17dp"
                    android:layout_marginStart="@dimen/common_side_margin_20dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sign_up_sign_up_kyc_purpose_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_black_14181B_100"
                    android:hint="@string/sign_up_kyc_purpose_hint"
                    android:textColorHint="@color/text_gray_B0B8C1_100"
                    android:fontFamily="@font/pretendard_medium_font_family"
                    android:drawableEnd="@drawable/ic_drop_down_gray_24dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_sign_up_kyc_purpose"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_949698_100"
                    app:layout_constraintStart_toStartOf="@+id/tv_sign_up_sign_up_kyc_purpose_value"
                    app:layout_constraintEnd_toEndOf="@+id/tv_sign_up_sign_up_kyc_purpose_value"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_sign_up_sign_up_kyc_purpose_value"
                    android:layout_marginStart="@dimen/common_side_margin_20dp"
                    android:layout_marginEnd="@dimen/common_side_margin_20dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sign_up_kyc_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_kyc_source"
                    android:textSize="16sp"
                    android:textColor="@color/text_black_14181B_100"
                    android:fontFamily="@font/pretendard_medium_font_family"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_sign_up_kyc_purpose_value"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="@dimen/common_side_margin_20dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sign_up_kyc_source_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_black_14181B_100"
                    android:hint="@string/sign_up_kyc_source_hint"
                    android:textColorHint="@color/text_gray_B0B8C1_100"
                    android:fontFamily="@font/pretendard_medium_font_family"
                    android:drawableEnd="@drawable/ic_drop_down_gray_24dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_kyc_source"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_949698_100"
                    app:layout_constraintStart_toStartOf="@+id/tv_sign_up_kyc_source_value"
                    app:layout_constraintEnd_toEndOf="@+id/tv_sign_up_kyc_source_value"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_sign_up_kyc_source_value"
                    android:layout_marginStart="@dimen/common_side_margin_20dp"
                    android:layout_marginEnd="@dimen/common_side_margin_20dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sign_up_kyc_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_kyc_job"
                    android:textSize="16sp"
                    android:textColor="@color/text_black_14181B_100"
                    android:fontFamily="@font/pretendard_medium_font_family"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_kyc_source_value"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="@dimen/common_side_margin_20dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sign_up_kyc_job_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_black_14181B_100"
                    android:hint="@string/sign_up_kyc_job_hint"
                    android:textColorHint="@color/text_gray_B0B8C1_100"
                    android:fontFamily="@font/pretendard_medium_font_family"
                    android:drawableEnd="@drawable/ic_drop_down_gray_24dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_kyc_job"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_949698_100"
                    app:layout_constraintStart_toStartOf="@+id/tv_sign_up_kyc_job_value"
                    app:layout_constraintEnd_toEndOf="@+id/tv_sign_up_kyc_job_value"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_sign_up_kyc_job_value"
                    android:layout_marginStart="@dimen/common_side_margin_20dp"
                    android:layout_marginEnd="@dimen/common_side_margin_20dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btn_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/common_confirm"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:background="@drawable/selector_gray_b0b8c1_sky_30c6e8_round_4dp"
                    android:enabled="false"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_kyc_job_value"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_marginTop="@dimen/common_side_margin_20dp"
                    android:layout_marginStart="@dimen/common_side_margin_20dp"
                    android:layout_marginEnd="@dimen/common_side_margin_20dp"
                    android:layout_marginBottom="@dimen/common_side_margin_20dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>