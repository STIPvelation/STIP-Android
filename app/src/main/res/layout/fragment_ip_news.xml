<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 🔹 최신 IP뉴스 타이틀 -->
        <TextView
            android:id="@+id/text_news_titles"
            style="@style/DefaultTextStyle_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_bottom_line_unselected"
            android:padding="12dp"
            android:text="@string/title_latest_news"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextSwitcher
            android:id="@+id/newsSwitcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            android:padding="8dp" />


        <!-- 🔹 뉴스 ViewPager2 -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:overScrollMode="never"
            app:layout_constraintBottom_toTopOf="@id/dot_indicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_news_titles" />

        <!-- 🔹 인디케이터 -->
        <LinearLayout
            android:id="@+id/dot_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="24dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewpager_news">

            <ImageView
                android:id="@+id/dot_1"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/ic_dot_active" />

            <ImageView
                android:id="@+id/dot_2"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginStart="9dp"
                android:src="@drawable/ic_dot_inactive" />

            <ImageView
                android:id="@+id/dot_3"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginStart="9dp"
                android:src="@drawable/ic_dot_inactive" />

            <ImageView
                android:id="@+id/dot_4"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginStart="9dp"
                android:src="@drawable/ic_dot_inactive" />
        </LinearLayout>

        <!-- 🔹 마르퀴스 뉴스 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/news_swiper_container"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/breaking_news_background"
            android:descendantFocusability="blocksDescendants"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dot_indicator">


            <TextView
                android:id="@+id/text_breaking_tag"
                style="@style/breaking_news_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/breaking_news"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_single_news_swiper"
                style="@style/breaking_news_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/ip_breaking_news"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/text_breaking_tag"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/section_separator_ip_news"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:background="#F4F4F4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/news_swiper_container" />

        <!-- 🔹 구분선 -->

        <!-- 🔹 뉴스 아이템 섹션 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/news_items_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/section_separator_ip_news">

            <TextView
                android:id="@+id/text_news_items_title"
                style="@style/DefaultTextStyle_16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="최신 뉴스"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewNewsItems"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingBottom="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/news_items_header" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
