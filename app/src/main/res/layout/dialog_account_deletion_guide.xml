<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background_rounded_white"
    android:layout_margin="16dp"
    android:paddingTop="24dp"
    android:maxHeight="500dp">

    <TextView
        android:id="@+id/dialog_deletion_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/deletion_guide_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_deletion_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deletion_guide_intro"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/dialog_deletion_consequence1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deletion_guide_consequence1"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/dialog_deletion_consequence2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:lineSpacingExtra="3dp"
                android:text="@string/deletion_guide_consequence2"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dialog_deletion_consequence3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deletion_guide_consequence3"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="3dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/dialog_deletion_consequence4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deletion_guide_consequence4"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/dialog_deletion_notes_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deletion_guide_notes_title"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/dialog_deletion_note1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deletion_guide_note1"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/dialog_deletion_note2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deletion_guide_note2"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/dialog_deletion_note3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deletion_guide_note3"
                android:textSize="14sp"
                android:lineSpacingExtra="3dp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_deletion_button_close"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:text="@string/dialog_close"
            android:textAllCaps="false"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E0E0E0" />

        <TextView
            android:id="@+id/dialog_deletion_button_confirm"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:text="@string/dialog_confirm"
            android:textAllCaps="false"
            android:textColor="@color/main_point"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>